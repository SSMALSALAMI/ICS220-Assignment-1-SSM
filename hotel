from enum import Enum
import datetime

# Enumerations for various statuses
class Gender(Enum):
    FEMALE = 1
    MALE = 2

class PaymentMethod(Enum):
    CREDIT_CARD = 1
    CASH = 2

class BookingStatus(Enum):
    REQUESTED = 1
    PENDING = 2
    CONFIRMED = 3
    CANCELLED = 4

class RoomStatus(Enum):
    RESERVED = 1
    AVAILABLE = 2
    OCCUPIED = 3
    NOT_AVAILABLE = 4

class PaymentStatus(Enum):
    SUCCESSFUL = 1
    PENDING = 2
    FAILED = 3
    SERVER_ERROR = 4

class AccountStatus(Enum):
    ACTIVE = 1
    CLOSED = 2
    CANCELLED = 3
    BLACKLIST = 4

# Guest Class
class Guest:
    def __init__(self, first_name: str, last_name: str, email: str, phone_number: str, gender: Gender, id_number: str, payment_method: PaymentMethod):
        self._first_name = first_name
        self._last_name = last_name
        self._email = email
        self._phone_number = phone_number
        self._gender = gender
        self._id_number = id_number
        self._payment_method = payment_method

    # Getters
    def get_first_name(self):
        return self._first_name

    def get_last_name(self):
        return self._last_name

    def get_email(self):
        return self._email

    def get_phone_number(self):
        return self._phone_number

    def get_gender(self):
        return self._gender

    def get_id_number(self):
        return self._id_number

    def get_payment_method(self):
        return self._payment_method

    # Setters
    def set_first_name(self, first_name: str):
        self._first_name = first_name

    def set_last_name(self, last_name: str):
        self._last_name = last_name

    def set_email(self, email: str):
        self._email = email

    def set_phone_number(self, phone_number: str):
        self._phone_number = phone_number

    def set_gender(self, gender: Gender):
        self._gender = gender

    def set_id_number(self, id_number: str):
        self._id_number = id_number

    def set_payment_method(self, payment_method: PaymentMethod):
        self._payment_method = payment_method

    # Methods for guest actions
    def book_room(self):
        pass

    def cancel_reservation(self):
        pass

    def update_contact_info(self):
        pass

# Room Booking Class
class RoomBooking:
    def __init__(self, reservation_num: str, check_in_date: datetime.date, check_out_date: datetime.date, room_number: int, customer_id: str, total_amount: float):
        self._reservation_num = reservation_num
        self._check_in_date = check_in_date
        self._check_out_date = check_out_date
        self._room_number = room_number
        self._customer_id = customer_id
        self._total_amount = total_amount

    # Getters
    def get_reservation_num(self):
        return self._reservation_num

    def get_check_in_date(self):
        return self._check_in_date

    def get_check_out_date(self):
        return self._check_out_date

    def get_room_number(self):
        return self._room_number

    def get_customer_id(self):
        return self._customer_id

    def get_total_amount(self):
        return self._total_amount

    # Setters
    def set_reservation_num(self, reservation_num: str):
        self._reservation_num = reservation_num

    def set_check_in_date(self, check_in_date: datetime.date):
        self._check_in_date = check_in_date

    def set_check_out_date(self, check_out_date: datetime.date):
        self._check_out_date = check_out_date

    def set_room_number(self, room_number: int):
        self._room_number = room_number

    def set_customer_id(self, customer_id: str):
        self._customer_id = customer_id

    def set_total_amount(self, total_amount: float):
        self._total_amount = total_amount

    # Methods for booking management
    def confirm_reservation(self):
        pass

    def cancel_reservation(self):
        pass

    def modify_reservation(self):
        pass

# Room Class
class Room:
    def __init__(self, room_number: int, room_type: str, price_per_night: float, is_available: bool, floor_number: int, number_of_beds: int):
        self._room_number = room_number
        self._room_type = room_type
        self._price_per_night = price_per_night
        self._is_available = is_available
        self._floor_number = floor_number
        self._number_of_beds = number_of_beds

    # Getters
    def get_room_number(self):
        return self._room_number

    def get_room_type(self):
        return self._room_type

    def get_price_per_night(self):
        return self._price_per_night

    def get_is_available(self):
        return self._is_available

    def get_floor_number(self):
        return self._floor_number

    def get_number_of_beds(self):
        return self._number_of_beds

    # Setters
    def set_room_number(self, room_number: int):
        self._room_number = room_number

    def set_room_type(self, room_type: str):
        self._room_type = room_type

    def set_price_per_night(self, price_per_night: float):
        self._price_per_night = price_per_night

    def set_is_available(self, is_available: bool):
        self._is_available = is_available

    def set_floor_number(self, floor_number: int):
        self._floor_number = floor_number

    def set_number_of_beds(self, number_of_beds: int):
        self._number_of_beds = number_of_beds

    # Room-related methods
    def check_availability(self):
        pass

    def update_status(self):
        pass

    def change_price(self):
        pass

# Payment Class
class Payment:
    def __init__(self, payment_method: PaymentMethod, amount: float, payment_date: datetime.date, confirmation_number: str):
        self._payment_method = payment_method
        self._amount = amount
        self._payment_date = payment_date
        self._confirmation_number = confirmation_number

    # Getters
    def get_payment_method(self):
        return self._payment_method

    def get_amount(self):
        return self._amount

    def get_payment_date(self):
        return self._payment_date

    def get_confirmation_number(self):
        return self._confirmation_number

    # Setters
    def set_payment_method(self, payment_method: PaymentMethod):
        self._payment_method = payment_method

    def set_amount(self, amount: float):
        self._amount = amount

    def set_payment_date(self, payment_date: datetime.date):
        self._payment_date = payment_date

    def set_confirmation_number(self, confirmation_number: str):
        self._confirmation_number = confirmation_number

    # Payment methods
    def process_payment(self):
        pass

    def refund_payment(self):
        pass

    def validate_payment(self):
        pass

# Account Class
class Account:
    def __init__(self, login_id: int, password: str, status: AccountStatus):
        self._login_id = login_id
        self._password = password
        self._status = status

    # Getters
    def get_login_id(self):
        return self._login_id

    def get_password(self):
        return self._password

    def get_status(self):
        return self._status

    # Setters
    def set_login_id(self, login_id: int):
        self._login_id = login_id

    def set_password(self, password: str):
        self._password = password

    def set_status(self, status: AccountStatus):
        self._status = status

    # Account management methods
    def validate_login(self):
        pass

    def forgot_password(self):
        pass

# Hotel Class
class Hotel:
    def __init__(self, name: str, location: str):
        self._name = name
        self._location = location

    # Getters
    def get_name(self):
        return self._name

    def get_location(self):
        return self._location

    # Setters
    def set_name(self, name: str):
        self._name = name

    def set_location(self, location: str):
        self._location = location

    # Hotel-related methods
    def filter(self, city: str, state: str, country: str):
        pass

    def reviews(self):
        pass
# Example 1: Guest 1 - Suliman Alsalami
customer1 = Guest(
    first_name="Suliman",
    last_name="Alsalami",
    email="suliman@example.com",
    phone_number="0501234567",
    gender=Gender.MALE,
    id_number="ID12345",
    payment_method=PaymentMethod.CREDIT_CARD
)

# Create a Room for Suliman's booking
room1 = Room(
    room_number=101,
    room_type="Double",
    price_per_night=150.00,
    is_available=True,
    floor_number=1,
    number_of_beds=2
)

# Create a RoomBooking for Suliman
booking1 = RoomBooking(
    reservation_num="CONFIRM123",
    check_in_date=datetime.date(2024, 12, 10),
    check_out_date=datetime.date(2024, 12, 12),
    room_number=room1.get_room_number(),
    customer_id=customer1.get_id_number(),
    total_amount=300.00
)

# Create a Payment for Suliman's booking
payment1 = Payment(
    payment_method=PaymentMethod.CREDIT_CARD,
    amount=300.00,
    payment_date=datetime.date(2024, 12, 10),
    confirmation_number="PAY12345"
)

# Example 2: Guest 2 - Afshan Parkar
customer2 = Guest(
    first_name="Afshan",
    last_name="Parkar",
    email="afshan@example.com",
    phone_number="0509876543",
    gender=Gender.FEMALE,
    id_number="ID54321",
    payment_method=PaymentMethod.CASH
)

# Create a Room for Afshan's booking
room2 = Room(
    room_number=202,
    room_type="Suite",
    price_per_night=300.00,
    is_available=True,
    floor_number=2,
    number_of_beds=3
)

# Create a RoomBooking for Afshan
booking2 = RoomBooking(
    reservation_num="PENDING456",
    check_in_date=datetime.date(2024, 11, 15),
    check_out_date=datetime.date(2024, 11, 18),
    room_number=room2.get_room_number(),
    customer_id=customer2.get_id_number(),
    total_amount=900.00
)

# Create a Payment for Afshan's booking
payment2 = Payment(
    payment_method=PaymentMethod.CASH,
    amount=900.00,
    payment_date=datetime.date(2024, 11, 15),
    confirmation_number="PAY54321"
)

# Display the details for both bookings
def display_booking_details(guest, booking, payment):
    print(f"Guest Name: {guest.get_first_name()} {guest.get_last_name()}")
    print(f"Room Number: {booking.get_room_number()}")
    print(f"Check-in Date: {booking.get_check_in_date()}")
    print(f"Check-out Date: {booking.get_check_out_date()}")
    print(f"Total Amount: ${booking.get_total_amount():.2f}")
    print(f"Payment Method: {payment.get_payment_method().name}")
    print(f"Payment Confirmation Number: {payment.get_confirmation_number()}")
    print("\n")

print("Booking Details for Guest 1 (Suliman Alsalami):\n")
display_booking_details(customer1, booking1, payment1)

print("Booking Details for Guest 2 (Afshan Parkar):\n")
display_booking_details(customer2, booking2, payment2)
